<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.shopping.controller.UserPageController"
      style="-fx-background-color: linear-gradient(to bottom right, #87b0c0, #7bcde0);">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Shopping Center" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Label text="[User Mode]" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c0e50;"/>

    <Button text="Manage Products" onAction="#onManageProductsClick"
            prefWidth="300"
            style="-fx-background-color: darkcyan;
                       -fx-text-fill: white;
                       -fx-font-size: 20px;
                       -fx-background-radius: 10;"/>
    <Button text="Manage Customers" onAction="#onManageCustomerClick"
            prefWidth="300"
            style="-fx-background-color: #0059ff;
                       -fx-text-fill: white;
                       -fx-font-size: 20px;
                       -fx-background-radius: 10;"/>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom right, #f4f7fb, #dfe9f3);">

    <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0"
          AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">

        <Label text="Product Management"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <TableView fx:id="productTableView"
                   prefHeight="500.0" prefWidth="800.0"
                   style="-fx-background-color: #a9c6d0;
                   -fx-border-color: #184752;
                   -fx-border-radius: 6;
                   -fx-background-radius: 6;"/>

        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="addButton"
                    text="Add Product"
                    onAction="#onAddProductButtonClick"
                    prefWidth="150"
                    style="-fx-background-color: #3498db;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-background-radius: 8;"/>

            <Button fx:id="removeButton"
                    text="Remove Product"
                    onAction="#onRemoveProductButtonClick"
                    prefWidth="150"
                    style="-fx-background-color: #e74c3c;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-background-radius: 8;"/>
        </HBox>

    </VBox>
</AnchorPane>

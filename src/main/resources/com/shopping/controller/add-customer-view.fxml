<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: linear-gradient(to bottom right, #0f8fa8, #184752);">

    <Label text="Customer Details" style="-fx-font-size: 40px; -fx-text-fill: #9fc9cc; -fx-font-weight: bold;"/>

    <GridPane alignment="center" hgap="10" prefHeight="400.0" prefWidth="600.0" vgap="10" xmlns:fx="http://javafx.com/fxml"
              style="-fx-background-color: linear-gradient(to bottom right, #0f8fa8, #184752);">

        <Label text="ID" GridPane.rowIndex="0"
               style="-fx-font-size: 20px;
               -fx-font-weight: bold;
               -fx-text-fill: white;"/>
        <TextField fx:id="ID" maxWidth="300.0" prefHeight="40.0" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-background-color: #a9c6d0;
                           -fx-text-fill: black;
                           -fx-font-size: 20px;
                           -fx-background-radius: 12;"/>

        <Label text="Name" GridPane.rowIndex="1"
               style="-fx-font-size: 20px;
               -fx-font-weight: bold;
               -fx-text-fill: white;"/>
        <TextField fx:id="name" maxWidth="300.0" prefHeight="40.0" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   style="-fx-background-color: #a9c6d0;
                           -fx-text-fill: black;
                           -fx-font-size: 20px;
                           -fx-background-radius: 12;"/>

        <Label text="Address" GridPane.rowIndex="2"
               style="-fx-font-size: 20px;
               -fx-font-weight: bold;
               -fx-text-fill: white;"/>
        <TextField fx:id="address" maxWidth="300.0" prefHeight="40.0" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   style="-fx-background-color: #a9c6d0;
                           -fx-text-fill: black;
                           -fx-font-size: 20px;
                           -fx-background-radius: 12;"/>

        <Label text="Card details " GridPane.rowIndex="3"
               style="-fx-font-size: 20px;
               -fx-font-weight: bold;
               -fx-text-fill: white;"/>
        <TextField fx:id="card" maxWidth="300.0" prefHeight="40.0" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   style="-fx-background-color: #a9c6d0;
                           -fx-text-fill: black;
                           -fx-font-size: 20px;
                           -fx-background-radius: 12;"/>



        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>

    </GridPane>
</VBox>
